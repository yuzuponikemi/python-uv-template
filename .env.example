# 環境変数の例
# このファイルを .env にコピーして使用してください
# IMPORTANT: .env ファイルはGitにコミットしないでください

# Python設定
PYTHONHASHSEED=0  # 再現性のためのハッシュシード固定
PYTHONUNBUFFERED=1  # 標準出力のバッファリングを無効化

# NumPy/SciPy設定
OMP_NUM_THREADS=4  # OpenMPスレッド数
MKL_NUM_THREADS=4  # Intel MKLスレッド数
OPENBLAS_NUM_THREADS=4  # OpenBLASスレッド数
NUMBA_CACHE_DIR=/tmp/numba_cache  # Numbaキャッシュディレクトリ

# データパス
DATA_DIR=./data  # データディレクトリ
OUTPUT_DIR=./output  # 出力ディレクトリ
CACHE_DIR=./cache  # キャッシュディレクトリ

# ログ設定
LOG_LEVEL=INFO  # ログレベル (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_FILE=./logs/app.log  # ログファイルパス

# API Keys（研究用APIなど）
# ANTHROPIC_API_KEY=sk-ant-...  # Claude API (GitHub Actionsでは使用しない)
# OPENAI_API_KEY=sk-...  # OpenAI API
# HF_TOKEN=hf_...  # Hugging Face Token

# データベース（必要に応じて）
# DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# テスト設定
PYTEST_TIMEOUT=300  # テストタイムアウト（秒）

# 再現性設定
RANDOM_SEED=42  # ランダムシード
CUDA_VISIBLE_DEVICES=0  # GPU設定（使用する場合）
